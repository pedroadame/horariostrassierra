<% sch = schedule_split_by_day(@teacher.schedule) %>
<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--1-offset mdl-cell--10-col mdl-cell--middle mdl-card
  mdl-shadow--6dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h2 class="mdl-card__title-text"><%= t("horario.horario") %>
        - <%= @teacher.humanize %></h2>
    </div>
    <table class="mdl-data-table mdl-js-data-table full-width">
      <thead>
      <tr>
        <% # noinspection RailsI18nInspection
           t('horario.cabeceras').each do |val| %>
            <th><%= val %></th>
        <% end %>
      </tr>
      </thead>
      <tbody>
      <% Hour.tramos_posibles.each do |tr| %>
          <tr>
            <td><%= tr %></td>
            <% 1.upto(5) do |j| %>
                <% if sch[j].first&.in? tr
                    a = sch[j].shift
                    texto = a.subject.abbreviation.upcase + " - " + a.room.abbreviation
                    id = Random.rand(Integer::MAX).to_s
                    %>
                    <td id="<%= id %>" <%= 'class="hora-actual"'.html_safe if a.now? %>><%= texto %></td>
                    <div class="mdl-tooltip" for="<%= id %>">
                      <% a.groups.each do |a| %>
                          <%= a %> <br>
                      <% end %>
                    </div>
                <% else %>
                    <td class="hora-libre"><%= t("sin_clase") %></td>
                <% end %>
            <% end %>
          </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>