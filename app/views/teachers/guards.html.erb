<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-offset mdl-cell--4-col mdl-cell--middle mdl-card
  mdl-shadow--6dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h2 class="mdl-card__title-text"><%= t('links.prof_guardia') %></h2>
    </div>
    <% if @teachers.any? %>
        <table class="mdl-data-table mdl-js-data-table full-width links">
          <tbody>
            <% @teachers.each do |t| %>
            <tr>
              <td style="cursor: pointer"><%= link_to t.name, teacher_schedule_path(id: t.id) %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    <% end %>
  </div>
</div>