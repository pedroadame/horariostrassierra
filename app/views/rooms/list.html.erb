<div class="mdl-grid">
  <div class="mdl-cell mdl-cell--4-offset mdl-cell--4-col mdl-cell--middle mdl-card
  mdl-shadow--6dp">
    <div class="mdl-card__title mdl-color--primary mdl-color-text--white">
      <h2 class="mdl-card__title-text"><%= t('aulas') %></h2>
    </div>
    <% if @rooms.any? %>
        <table class="mdl-data-table mdl-js-data-table full-width links">
          <tbody>
          <% @rooms.each do |r| %>
              <% next if r.abbreviation.blank? || r.name.mb_chars.upcase == "DESDOBLE" %>
              <tr>
                <td><%= link_to r.name.mb_chars.upcase, room_schedule_path(id: r.id) %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
    <% else %>
        <div class="mdl-card__supporting-text">
          <h2><%= t('no_hay_aulas') %></h2>
        </div>
    <% end %>
  </div>
</div>