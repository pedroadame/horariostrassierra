<%= provide(:devise_title, t('registrarse')) %>
<%= form_for(resource, as: resource_name,
             url: registration_path(resource_name), html: {class: 'formulario'}) do |f| %>
    <%= devise_error_messages! %>
    <div class="mdl-card__supporting-text">

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <% if Rails.env.production? %>
            <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input',
                             pattern: '[a-z0-9._%+-]+@iestrassierra.com$' %>
            <%= f.label :email, class: 'mdl-textfield__label' %>
            <span class="mdl-textfield__error"><%= t 'bad_prod_email' %></span>
        <% else %>
            <%= f.email_field :email, autofocus: true, class: 'mdl-textfield__input' %>
            <%= f.label :email, class: 'mdl-textfield__label' %>
            <span class="mdl-textfield__error"><%= t 'bad_email' %></span>
        <% end %>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password, autocomplete: "off",
                             class: 'mdl-textfield__input' %>
        <%= f.label :password, class: 'mdl-textfield__label' %>
      </div>

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password_confirmation, autocomplete: "off",
                             class: 'mdl-textfield__input' %>
        <%= f.label :password_confirmation, class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-card__actions mdl-card--border card-buttons">
      <%= f.submit t('submit'), class: 'mdl-button
      mdl-js-button mdl-button--raised mdl-button--colored
      mdl-js-ripple-effect' %>
      <%= render 'devise/shared/links' %>
      <div class="clear"></div>
    </div>

<% end %>
