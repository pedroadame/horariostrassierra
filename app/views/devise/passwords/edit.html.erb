<% provide(:devise_title, t("new_password")) %>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put, class: 'formulario'}) do |f| %>
    <%= devise_error_messages! %>
    <%= f.hidden_field :reset_password_token %>
    <div class="mdl-card__supporting-text">

      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password, autocomplete: "off", autofocus: true,
                             class: 'mdl-textfield__input' %>
        <%= f.label :password, t("new_password"), class: 'mdl-textfield__label' %>
      </div>
      <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
        <%= f.password_field :password_confirmation, autocomplete: "off",
                             class: 'mdl-textfield__input' %>
        <%= f.label :password_confirmation, t("password_confirmation"), class: 'mdl-textfield__label' %>
      </div>
    </div>

    <div class="mdl-card__actions mdl-card--border card-buttons">
      <%= f.submit t('submit'), class: 'mdl-button
      mdl-js-button mdl-button--raised mdl-button--colored
      mdl-js-ripple-effect' %>
      <%= render 'devise/shared/links' %>
      <div class="clear"></div>
    </div>
<% end %>
